<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="css/styles.css">
  <!-- Bootstrap JavaScript library for interactive elements -->
  <script src="js/bootstrap.bundle.js"></script>  
  <title>Admin Registration</title>
</head>
<body>
<!-- Go Back -->
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand -back" href="/">&#8592; Go Back</a>
    </div>
</nav>

<!-- Admin Registration Form -->
<div class="container my-4">
  <div class="row align-items-center justify-content-center">
    <!-- Welcome Section -->
    <div class="col-lg-6 mb-4 mb-lg-0 text-center">
      <h1 class=" my-4 h1-lg">PPMG "ACAD. Ivan Cenov"</h1>
      <p class="lead text-muted">Need to Create a New Admin?</p>
      <a href="/admin" class="btn btn-primary btn-lg mt-3">Login Now</a>
    </div>

    <!-- Admin Registration Form Section -->
    <div class="col-lg-6">
      <div class="card-login shadow-lg p-4">
        <h2 class="text-center mb-4">Admin Registration</h2>
        <form action="/register-admin" method="POST">
          <!-- Full Name Input -->
          <div class="form-group mb-3">
            <label for="fullName" class="form-label ">Full Name</label>
            <input required placeholder="Full Name" type="text" name="fullName" id="fullName" class="form-control">
          </div>
          <!-- Email Input -->
          <div class="form-group mb-3">
            <label for="email" class="form-label ">Email</label>
            <input required placeholder="Email" type="email" name="email" id="email" class="form-control">
          </div>
          <!-- Username Input -->
          <div class="form-group mb-3">
            <label for="username" class="form-label ">Username</label>
            <input required placeholder="Username" type="text" name="username" id="username" class="form-control">
          </div>
          <!-- Password Input -->
          <div class="form-group mb-4">
            <label for="password" class="form-label">Password</label>
            <input required placeholder="Password" type="password" name="password" id="password" class="form-control">
          </div>
          <!-- Confirm Password Input -->
          <div class="form-group mb-4">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input required placeholder="Confirm Password" type="password" name="confirmPassword" id="confirmPassword" class="form-control">
          </div>
          <!-- Submit Button -->
          <div class="text-center">
            <button class="btn btn-primary w-100" type="submit">Create Admin</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- End of Admin Registration Form -->
</body>
</html>
