<!-- views/news.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="Erasmus Projects - Latest News" />
  <meta name="author" content="PPMG 'akad. Ivan Tsenov'" />
  <title>News - Erasmus @ PPMG</title>
  <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />

  <!-- Bootstrap CSS (required for layout) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700" rel="stylesheet" />
  <link href="/css/styles.css" rel="stylesheet" />
</head>
<body style="padding-top: 72px;"> <!-- padding to avoid fixed-top navbar overlap -->

    <!-- Load Navbar From /assets/partials/navbar -->
    <%- include('partials/navbar') %>

  <!-- Main content -->
  <main class="container py-5">
    <h1 class="text-center mb-4">Latest News</h1>

    <!-- Toolbar / controls -->
    <div class="mb-3">
      <div class="d-flex flex-column flex-md-row align-items-md-center gap-2">
        <!-- Search box -->
        <div class="flex-grow-1">
          <label for="searchInput" class="form-label visually-hidden">Search</label>
          <input id="searchInput" class="form-control" type="search" placeholder="Search news..." />
        </div>

        <!-- Sort select -->
        <div>
          <label for="sortOption" class="form-label visually-hidden">Sort</label>
          <select id="sortOption" class="form-select">
            <option value="">Sort (default)</option>
            <option value="date">Newest first</option>
            <option value="title">Title (A → Z)</option>
          </select>
        </div>

        <!-- Active filters display -->
        <div id="activeFilters" class="ms-md-3"></div>
      </div>
    </div>

    <!-- News grid -->
    <div class="container px-0">
      <div class="row" id="newsContainer">
        <!-- JS will append article columns (col-*) here -->

        <!-- noscript fallback -->
        <noscript>
          <div class="col-12">
            <div class="alert alert-info">
              <h5 class="mb-1">JavaScript is disabled</h5>
              <p class="mb-0">Enable JavaScript to load the latest news and use search / filters.</p>
            </div>
          </div>
        </noscript>

        <!-- Optional static fallback example (will be replaced when JS runs) -->
        <div class="col-12 d-none" id="exampleFallbackCard">
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">Example News Title</h5>
              <p class="card-text">This is a fallback example card. It is hidden by default and only shown if you want a static example.</p>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Sentinel for infinite scroll (script will create one if missing) -->
    <div id="infiniteScrollSentinel" aria-hidden="true"></div>

    <!-- Loading / error placeholders (script can toggle these) -->
    <div id="loadingIndicator" style="display:none;" class="text-center py-3">Loading…</div>
    <div id="errorPlaceholder" style="display:none;"></div>
  </main>

      <!-- Footer-->
    <%- include('partials/footer') %>
    <!-- hidden placeholder for Google Translate -->
    <div id="google_translate_element" style="display:none;"></div>

  <!-- ----------------------- -->
  <!--   Custom Scripts Here   -->
  <!-- ----------------------- -->

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- News script (using absolute path: /js/scripts.js) -->
  <script src="/js/scripts.js" defer></script>
  <script src="/js/news.js" defer></script>
  <script src="/js/translator.js"></script>

</body>
</html>
