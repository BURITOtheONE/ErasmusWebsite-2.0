<body id="page-top">

    <!-- Load Navbar From /assets/partials/navbar -->
    <%- include('partials/navbar') %>

    <!-- Masthead-->
    <header class="masthead">
        <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center text-center">
                <div>
                    <h1 class="mx-auto my-0 text-uppercase">Erasmus+ Activities</h1>
                    <h2 class="text-white-50 mx-auto mt-2 mb-5">Discover our international collaborations from 2024 to 2027</h2>
                    <a class="btn btn-primary" href="#projects">Explore Activities</a>
                </div>
            </div>
        </div>
    </header>
    <!-- About-->
    <section class="about-section text-center" id="about">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-lg-8">
                    <h2 class="text-white mb-4">About PPMG 'Akad. Ivan Tsenov'</h2>
                    <p class="text-white-50">
                        PPMG 'Akad. Ivan Tsenov' is a renowned school in Vratsa, Bulgaria. We are proud to participate in the Erasmus+ program, fostering international collaboration and providing our students with opportunities to engage in educational projects across Europe.
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Activities-->
    <section class="projects-section bg-light" id="projects">
        <div class="container px-4 px-lg-5">
            <div class="text-center mb-5">
                <h2 class="text-black mb-4">Erasmus+ Activities (2024–2027)</h2>
                <p class="text-black-50">Explore our exciting projects and collaborations with schools across Europe.</p>
            </div>
            <!-- Project Cards-->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="assets/img/project1.jpg" alt="Project 1">
                        <div class="card-body">
                            <h4 class="card-title">Project Title 1</h4>
                            <p class="card-text">A brief description of this project's goals, participants, and outcomes.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="assets/img/project2.jpg" alt="Project 2">
                        <div class="card-body">
                            <h4 class="card-title">Project Title 2</h4>
                            <p class="card-text">A brief description of this project's goals, participants, and outcomes.</p>
                        </div>
                    </div>
                </div>
                <a class="text-light text-decoration-none mt-4 mx-auto text-center" href="/projects"><button class="btn btn-primary w-25">See All</button></a>
                <!-- Add more projects as needed -->
            </div>
        </div>
    </section>
        <!-- Contact Section-->
        <section class="contact-section bg-black" id="contact">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="hover-line col-md-4 mb-3">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center" id="openLocation" style="cursor: pointer;">
                                <i class="fas fa-map-marker-alt text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Location</h4>
                                <hr class="my-4 mx-auto" />
                                <div class="small text-black-50">PPMG "Akad. Ivan Tsenov" Vratsa</div>
                            </div>
                        </div>
                    </div>
                        <div class="hover-line col-md-4 mb-3">
                            <div class="card py-4 h-100">
                                <div class="card-body text-center">
                                    <i class="fas fa-envelope text-primary mb-2"></i>
                                    <h4 class="text-uppercase m-0">Email</h4>
                                    <hr class="my-4 mx-auto" />
                                    <div class="small text-black-50"><a href="mailto:erasmus@ppmg-vratza.bg">erasmus@ppmg-vratza.bg</a></div>
                                </div>
                            </div>
                        </div>
                            <div class="hover-line col-md-4 mb-3">
                        <div class="card py-4 h-100">
                            <div class="card-body text-center">
                                <i class="fas fa-phone text-primary mb-2"></i>
                                <h4 class="text-uppercase m-0">Phone</h4>
                                <hr class="my-4 mx-auto" />
                                <div 
                                class="small text-black-50 "            
                                id="copyText" 
                                class="text-primary text-decoration-underline" 
                                style="cursor: pointer;" 
                                data-bs-toggle="tooltip" 
                                data-bs-placement="top" 
                                data-bs-title="Copied!">+359 92 624 726</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    <!-- Footer-->
    <footer class="footer bg-black small text-center text-white-50">
        <div class="container px-4 px-lg-5">Copyright &copy; PPMG 'Akad. Ivan Tsenov' 2024</div>
    </footer>
